<%- model_class = Storylink -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize %></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:story) %></th>
      <th><%= model_class.human_attribute_name(:pattern) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @storylinks.each do |storylink| %>
      <tr>
        <td><%= link_to storylink.id, storylink_path(storylink) %></td>
        <td><%= storylink.story %></td>
        <td><%= storylink.pattern %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_storylink_path(storylink), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      storylink_path(storylink),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
	<%= link_to t('.back', :default => t("helpers.links.back")),
	              "/", :class => 'btn'  %>
	<%= link_to t('.new', :default => t("helpers.links.new")),
	            new_storylink_path,
	            :class => 'btn btn-primary' %>
</div>
