<%= form_for @patternlink, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :pattern, :class => 'control-label' %>
    <div class="controls">
      <%#= f.text_field :pattern, :class => 'text_field' %>
      <%= f.collection_select(:pattern, Pattern.find(:all), :name, :name, :include_blank => true) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :active_task, :class => 'control-label' %>
    <div class="controls">
      <%#= f.text_field :active_task, :class => 'text_field' %>
      <%= f.collection_select(:active_task, Task.find(:all), :name, :name, :include_blank => true) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :passive_task, :class => 'control-label' %>
    <div class="controls">
      <%#= f.text_field :passive_task, :class => 'text_field' %>
      <%= f.collection_select(:passive_task, Task.find(:all), :name, :name, :include_blank => true) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                patternlinks_path, :class => 'btn' %>
  </div>
<% end %>
