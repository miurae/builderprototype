<%- model_class = Patternlink -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pattern) %>:</strong></dt>
  <dd><%= @patternlink.pattern %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active_task) %>:</strong></dt>
  <dd><%= @patternlink.active_task %></dd>
  <dt><strong><%= model_class.human_attribute_name(:passive_task) %>:</strong></dt>
  <dd><%= @patternlink.passive_task %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              patternlinks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_patternlink_path(@patternlink), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              patternlink_path(@patternlink),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
