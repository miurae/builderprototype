<%- model_class = Pattern -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize %></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:patterntype) %></th>
      <th><%= model_class.human_attribute_name(:event) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @patterns.each do |pattern| %>
      <tr>
        <td><%= link_to pattern.id, pattern_path(pattern) %></td>
        <td><%= pattern.name %></td>
        <td><%= pattern.patterntype %></td>
        <td><%= pattern.event %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pattern_path(pattern), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pattern_path(pattern),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
	<%= link_to t('.back', :default => t("helpers.links.back")),
	              "/", :class => 'btn'  %>
	<%= link_to t('.new', :default => t("helpers.links.new")),
	            new_pattern_path,
	            :class => 'btn btn-primary' %>
</div>
