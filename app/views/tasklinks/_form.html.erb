<%= form_for @tasklink, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :task, :class => 'control-label' %>
    <div class="controls">
      <%#= f.text_field :task, :class => 'text_field' %>
      <%= f.collection_select(:task, Task.find(:all), :name, :name, :include_blank => true) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :application, :class => 'control-label' %>
    <div class="controls">
      <%#= f.text_field :application, :class => 'text_field' %>
      <%= f.collection_select(:application, Application.find(:all), :name, :name, :include_blank => true) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :input_data, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :input_data, :class => 'text_field' %>
      
    </div>
  </div>
  <div class="control-group">
    <%= f.label :output_data, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :output_data, :class => 'text_field' %>
      
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tasklinks_path, :class => 'btn' %>
  </div>
<% end %>
